<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin">


    <ImageView
        android:id="@+id/image_dish"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:src="@drawable/cream_soup"/>

    <TextView
        android:id="@+id/dish_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/image_dish"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:text="Some soup"/>

    <TextView
        android:id="@+id/dish_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dish_name"
        android:layout_toRightOf="@+id/image_dish"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:text="Soup description"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_dish"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/star_1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/empty_star_icon"/>

        <ImageView
            android:id="@+id/star_2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/empty_star_icon"/>

        <ImageView
            android:id="@+id/star_3"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/empty_star_icon"/>

        <ImageView
            android:id="@+id/star_4"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/empty_star_icon"/>

        <ImageView
            android:id="@+id/star_5"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/empty_star_icon"/>

        <TextView
            android:id="@+id/vote_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100"/>

        <ImageView
            android:id="@+id/image_comments"
            android:layout_width="25dp"
            android:layout_height="20dp"
            android:paddingLeft="10dp"
            android:src="@drawable/comment_icon"/>

        <TextView
            android:id="@+id/comment_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100"/>

        <ImageView
            android:id="@+id/image_tags"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:paddingLeft="10dp"
            android:src="@drawable/pin_icon"/>

        <TextView
            android:id="@+id/tag_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10"/>
    </LinearLayout>
</RelativeLayout>